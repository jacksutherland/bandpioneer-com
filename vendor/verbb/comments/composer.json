{
    "name": "verbb/comments",
    "description": "A Craft CMS plugin for managing comments directly within the CMS.",
    "type": "craft-plugin",
    "version": "2.0.5",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "comments"
    ],
    "support": {
        "email": "support@verbb.io",
        "issues": "https://github.com/verbb/comments/issues?state=open",
        "source": "https://github.com/verbb/comments",
        "docs": "https://github.com/verbb/comments",
        "rss": "https://github.com/verbb/comments/commits/v2.atom"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Verbb",
            "homepage": "https://verbb.io"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "craftcms/cms": "^4.0.0",
        "verbb/base": "^2.0.0",
        "theiconic/name-parser": "^1.0"
    },
    "autoload": {
        "psr-4": {
          "verbb\\comments\\": "src/"
        }
    },
    "extra": {
        "name": "Comments",
        "handle": "comments",
        "changelogUrl": "https://raw.githubusercontent.com/verbb/comments/craft-4/CHANGELOG.md",
        "class": "verbb\\comments\\Comments"
    }
}
