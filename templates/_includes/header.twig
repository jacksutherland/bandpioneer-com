<header class="site-header">

    <div class="container">
        <a href="{{ siteUrl }}" class="logo">
            <img loading="eager" class="logo-alt" src="{{ url('assets/images/bp-logo-alt-small.png') }}" alt="Band Pioneer" title="Band Pioneer" width="193" height="60" />
            {% if entry.section.handle == 'homepage' %}
                <img loading="eager" class="logo-mark" src="{{  url('assets/images/bp-mark.png') }}" alt="Band Pioneer" title="Band Pioneer" width="60" height="60" />
            {% endif %}
        </a>
        <a id="open-menu" href="/" class="bars">
            {% include '_includes/icons' with { type: 'bars' } %}
        </a>
        <nav id="main-menu" class="main-menu" role="navigation" aria-label="Secondary Navigation">
            <a id="close-menu" href="/" class="close-menu">
                {% include '_includes/icons' with { type: 'close' } %}
            </a>
            <ul>
                <li>
                    <a href="{{ siteUrl }}" class="underline" title="Band Pioneer Homepage">Home</a>
                </li>
                <li class="hide-mobile dropdown-menu">
                    <a class="underline" title="About Band Pioneer">About {% include '_includes/icons' with { type: 'down' } %}</a>
                    <ul>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/about">About Us</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/privacy">Privacy</a>
                        </li>
                    </ul>
                </li>
                <li class="hide-desktop">
                    <a class="underline" href="{{ siteUrl }}/about">About Us</a>
                </li>
                {% cache globally %}
                    <li class="hide-mobile dropdown-menu">
                        <a class="underline" title="Blog Topics">Topics {% include '_includes/icons' with { type: 'down' } %}</a>
                        <ul>
                            {% for cat in categories.all() %}
                                {% if cat.show %}
                                    <li>
                                        <a class="underline" href="{{ cat.url }}">{{ cat.title }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                {% endcache %}
                <li class="hide-mobile dropdown-menu">
                    <a class="underline" title="Chat GPT Driven Music Info Customized For You">AI Studio{% include '_includes/icons' with { type: 'down' } %}</a>
                    <ul id="studio-menu">
                        <li>
                            <h4>The Great AI Battle</h4>
                            <span>Enlightened discourse between 2 AI models, on hot-button topics</span>
                        </li>
                        <li>
                            <a class="underline" href="/ai-studio/debate?topic=ai-music">AI Music Generators</a>
                        </li>
                        <li>
                            <a class="underline" href="/ai-studio/debate?topic=music-decades">The Best Decade for Music</a>
                        </li>
                        <li>
                            <a class="underline" href="/ai-studio/debate?topic=music-genres">The Best Music Genres</a>
                        </li>
                        <li>
                            <a class="underline" href="/ai-studio/debate?topic=music-censorship">Music Censorship</a>
                        </li>
                        <li style="margin-top:25px;">
                            <h4>AI Customized Music Advice</h4>
                            <span>What is your primary role?</span>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=singer">Vocalist</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=guitarist">Guitarist</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=bassist">Bassist</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=drummer">Drummer</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=percussionist">Percussion</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=keyboardist">Keyboardist</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=brass-player">Brass Player</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=manager">Manager</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=producer">Producer</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}/ai-studio?role=sound-engineer">Sound Engineer</a>
                        </li>
                        <li>
                            <a class="underline" href="{{ siteUrl }}{{ siteUrl }}/ai-studio?role=musician">Other</a>
                        </li>
                        <li class="data-loaded" style="margin-top:30px;">
                            <a class="underline" href="{{ siteUrl }}/ai-studio">Return to Your Studio</a>
                        </li>
                    </ul>
                </li>
                <li class="hide-desktop">
                    <a href="{{ siteUrl }}/ai-studio" class="underline">My Studio</a>
                </li>
                <li><a class="underline" href="{{ siteUrl }}{{ (currentUser ? '/bands' : '/electronic-press-kit') }}" title="Electronic Press Kit">EPK</a></li>
                <li class="hide-desktop">
                    <a class="underline" href="{{ siteUrl }}/privacy">Privacy Policy</a>
                </li>
                <li><a class="underline" href="{{ siteUrl }}/contact" title="How to Contact Us">Contact</a></li>
                {% cache globally %}
                    {% for cat in categories.all() %}
                        {% if cat.show %}
                            <li class="hide-md">
                                <a class="underline" href="{{ cat.url }}">{{ cat.title }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                {% endcache %}
                <li class="display-md">
                    <form method="get" action="{{ siteUrl }}/search">
                        <a id="search" href="/">
                            {% include '_includes/icons' with { type: 'search' } %}
                            <input type="text" name="q" placeholder="Enter your question...">
                        </a>
                    </form>
                </li>
            </ul>
        </nav>
    </div>

    {% if entry.section.handle == 'blog' %}
        <div class="reading-time"><div id="reading-progress" class="reading-progress"></div></div>
    {% endif %}
</header>