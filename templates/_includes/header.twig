{% set categories = craft.entries.section('category') %}

<header>
    <div class="container">
        <a href="/" class="logo">
            <img class="logo-alt" src="{{ url('assets/images/bp-logo-alt-small.png') }}" alt="Band Pioneer" title="Band Pioneer" />
            <img class="logo-mark" src="{{ url('assets/images/bp-mark.png') }}" alt="Band Pioneer" title="Band Pioneer" />
        </a>
        <a id="open-menu" href="/" class="bars">
            {% include '_includes/icons' with { type: 'bars' } %}
        </a>
        <nav id="main-menu" class="main-menu" role="navigation" aria-label="Secondary Navigation">
            <a id="close-menu" href="/" class="close-menu">
                {% include '_includes/icons' with { type: 'close' } %}
            </a>
            <ul>
                <li>
                    <a href="/" class="underline" title="Band Pioneer Homepage">Home</a>
                </li>
                <li><a class="underline" href="/about" title="About Band Pioneer">About Us</a></li>
                <li><a class="underline" href="/contact" title="How to Contact Us">Contact</a></li>
                {% for cat in categories.all() %}
                    <li class="hide-md">
                        <a class="underline" href="{{ cat.url }}">{{ cat.title }}</a>
                    </li>
                {% endfor %}
                <li class="display-md">
                    <form method="get" action="/search">
                        <a id="search" href="/">
                            {% include '_includes/icons' with { type: 'search' } %}
                            <input type="text" name="q" placeholder="Enter your search...">
                        </a>
                    </form>
                </li>
            </ul>
        </nav>
    </div>
    {% if entry.section.handle == 'blog' %}
        <div class="reading-time"><div id="reading-progress" class="reading-progress"></div></div>
    {% endif %}
</header>