{% macro blogTitle(blog, showSubheadline = true) %}
	{% if showSubheadline and blog.subheadline | length %}
		{{ blog.title ~ (blog.subheadline | length > 10 ? ' - '  ~ blog.subheadline : '') }}
	{% else %}
		{{ blog.title }}
	{% endif %}
{% endmacro %}

{% macro getYoutubeId(url) %}
    {% set youtubeId = '' %}

    {% if 'youtube.com/watch?v=' in url %}
        {% set parts = url|split('v=') %}
        {% set youtubeId = parts[1] | split('&')[0] %}
   
    {% elseif 'youtu.be/' in url %}
        {% set parts = url|split('youtu.be/') %}
        {% set youtubeId = parts[1] | split('?')[0] %}
    {% endif %}
    {{ youtubeId }}
{% endmacro %}