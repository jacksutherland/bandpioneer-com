{% extends 'account/_layout' %}

{% set allowAnonymous = true %}

{% set entry = { slug: 'bulletin-board', title: 'Bulletin Board', section: { handle: 'bulletin-board' } } %}

{% set posts = craft.rockstar.getBulletinBoardPosts() %}

{% block content %}

	<section class="page-header">
		<div class="container">
			<h1>Band Bulletin Board</h1>
			<h3>(Beta Version: 1.10)</h3>
			<h4>Are you looking to join a band, start a band, or find musicians to collaborate with on a project? Browse the posts on this page to connect with other musicians with similar interests and start making music together! Or post details about your skillset, music projects, and the type of collaborations you're working on to help others find you.</h4>
			<p class="text-right">
				<a class="bulletin-post" href="/community/create-bulletin-post">
					{% include '_includes/icons' with { type: 'thumbtack' } %} Post a bulletin
				</a>
			</p>
		</div>
	</section>

	<div class="rockstars-container bulletin-board">

		<div class="col">

			{% for post in posts %}
				<a href="/community/bulletin-post/{{ post.slug }}" title="Reply to this post?">
					<section>
						{% include '_includes/icons' with { type: 'thumbtack' } %}
						<div>
							{% switch post.type %}
								{% case 'management' %}
									<h5>Band Management</h5>
								{% case 'members' %}
									<h5>Band Members</h5>
								{% case 'composition' %}
									<h5>Music Composition</h5>
								{% case 'lessons' %}
									<h5>Music Lessons</h5>
								{% case 'marketing' %}
									<h5>Music Marketing</h5>
								{% case 'production' %}
									<h5>Music Production</h5>
								{% default %}
									<h5>Collaboration</h5>
							{% endswitch %}
							<span>{{ post.daysAgo }}</span>
							<span class="bubble">
								{% include '_includes/icons' with { type: 'message' } %} {{ post.replyCount }}
							</span>
						</div>
						<h3>{{ post.title }}</h3>
						<p>{{ post.description }}</p>
					</section>
				</a>
			{% endfor %}
		</div>

	</div>

{% endblock %}